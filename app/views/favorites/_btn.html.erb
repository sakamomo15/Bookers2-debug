<% if book.favorited_by?(current_user) %>
  ️<%= link_to book_favorite_path(book), method: :delete, class: "text-danger", remote: true do %>
    <i class="fa-solid fa-heart" aria-hidden="true"></i>
    ︎︎️<%= book.favorites.count %>
  <% end %>

<% else %>
  <%= link_to book_favorite_path(book), method: :post, class: "text-primary", remote: true do %>
    <i class="fa-solid fa-heart" aria-hidden="true"></i>
    <%= book.favorites.count %>
  <% end %>
<% end %>
