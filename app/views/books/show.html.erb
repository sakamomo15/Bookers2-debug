<div class='container'>
  
  <div class="d-flex justify-content-center mb-2">
    <%= render "searches/form" %>
  </div>
  
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to (@book.user) do %>
              <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          
          <td><%= link_to @book.title, @book %></td>
          
          <td><%= @book.body %></td>
          
          <% if @book.favorited_by?(current_user) %>
            <td>
              ️<%= link_to book_favorite_path(@book), method: :delete, class: "text-danger" do %>
                ♡︎︎️<%= @book.favorites.count %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorite_path(@book), method: :post, class: "text-primary" do %>
                ♡<%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          
          <td>
            コメント数：<%= @book.book_comments.count %>
          </td>
          
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, confirm: '本当に消しますか？', class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      
      <% @book.book_comments.each do |book_comment| %>
      <div>
        <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
        <%= book_comment.user.name %>
        <%= book_comment.comment %>
        
        <% if book_comment.user == current_user %>
          <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete %>
        <% end %>
      </div>
      <% end %>
      
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
      
    </div>
  </div>
</div>